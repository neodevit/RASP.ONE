<Page
    x:Class="RaspaCentral.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RaspaCentral"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="1280" Height="800">



    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="1280" Height="800">
        <Pivot x:Name="Tabs" RenderTransformOrigin="0,0" >
            <PivotItem x:Name="TabsMappa" Header="Mappa" RenderTransformOrigin="0,0" Margin="72,-1,-48,1">
                <Grid  RenderTransformOrigin="0,0" >
                    <Grid x:Name="GridMappa"  RenderTransformOrigin="0,0"  Margin="0,0,375,0">
                        <RelativePanel >

                            <!--MAPPA-->
                            <Image x:Name="Mappa" Height="484" Width="999" Source="Assets/mappa1.png" 
                               DragOver="Mappa_DragOver" Drop="Mappa_Drop" AllowDrop="True" 
                               HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="0,0,0,0" 
                                Tapped="Mappa_Tapped"    />

                            <Ellipse x:Name="evidenziazione" 
                                 Height="36" Width="36" 
                                 Fill="Transparent" Visibility="Collapsed"
                                 Stroke="SteelBlue" StrokeThickness="3" />

                        </RelativePanel>
                    </Grid>

                    <TextBlock x:Name="messaggio" HorizontalAlignment="Left" Margin="0,500,0,0" Text="..." TextWrapping="Wrap" VerticalAlignment="Top" Width="994" Height="32"/>
                    <!--TOOLBAR-->
                    <RelativePanel x:Name="ToolBar" Margin="631,1,0,39">
                        <TextBlock x:Name="TITOLO_TOOLBAR" HorizontalAlignment="Left" Margin="11,6,-24,419" Text="..." TextWrapping="Wrap" Width="348" FontWeight="Bold" FontSize="18" TextAlignment="Left" />

                        <!--COMPONENTI-->
                        <RelativePanel x:Name="ToolbarComponenti" Visibility="Collapsed" >
                            <Grid>
                                <TextBlock HorizontalAlignment="Left" Margin="27,38,0,345" Text="Luce" TextWrapping="Wrap" />
                                <Image x:Name="toolbar_light" Tag="1" Margin="6,41,323,387" Source="/Assets/light_off.png" 
                                       CanDrag="True" DragStarting="Button_DragStarting" PointerPressed = "Img_PointerPressed"
                                       Width="16" Height="16"   />
                                <TextBlock HorizontalAlignment="Left" Margin="27,68,0,317" Text="PIR" TextWrapping="Wrap" />
                                <Image x:Name="toolbar_pir" Tag="2" Margin="5,70,324,358" Source="/Assets/bell_on.png" 
                                       CanDrag="True" DragStarting="Button_DragStarting" PointerPressed = "Img_PointerPressed"
                                       Width="16" Height="16"  />

                                <TextBlock HorizontalAlignment="Left" Margin="225,39,0,346" Text="NODO" TextWrapping="Wrap" />
                                <Image x:Name="toolbar_node" Tag="3" Margin="205,42,124,386" Source="Assets/raspberry.png" 
                                       CanDrag="True" DragStarting="Button_DragStarting" PointerPressed = "Img_PointerPressed"
                                       Width="16" Height="16"  />

                                <TextBlock HorizontalAlignment="Left" Margin="225,65,0,320" Text="CENTRALE" TextWrapping="Wrap" />
                                <Image x:Name="toolbar_central" Tag="4" Margin="205,68,124,360" Source="Assets/central.png" 
                                       CanDrag="True" DragStarting="Button_DragStarting" PointerPressed = "Img_PointerPressed"
                                       Width="16" Height="16"  />


                            </Grid>
                        </RelativePanel>
                        <!--PROPERTY-->
                        <RelativePanel x:Name="ToolBarProperty" Visibility="Collapsed" HorizontalAlignment="Left"  >
                            <Grid>
                                <RelativePanel x:Name="LOGO_Property" Visibility="Collapsed" >
                                    <Image Source="Assets/logo.png" Margin="28,32,-28,-32" />
                                    <TextBlock Height="72" Text="RASPA" TextWrapping="Wrap" VerticalAlignment="Top" Margin="11,10,-10,-62" FontWeight="Bold" FontSize="48"/>
                                    <TextBlock HorizontalAlignment="Left" Height="20" Text="Ver 1.0.0" TextWrapping="Wrap" VerticalAlignment="Top" Width="91" Margin="73,58,-102,-58" TextAlignment="Right"/>
                                    <TextBlock HorizontalAlignment="Left" Height="20" Text="..:: Neodev :: CopyLeft 2018 ::.." TextWrapping="Wrap" VerticalAlignment="Top" Width="340" Margin="3,383,-281,-383" TextAlignment="Center"/>
                                    <TextBlock HorizontalAlignment="Left" Height="20" Text="Neodev" TextWrapping="Wrap" VerticalAlignment="Top" Width="91" Margin="14,9,-43,-9" TextAlignment="Left"/>
                                </RelativePanel>
                                <RelativePanel x:Name="ComponentProperty" Visibility="Visible" >
                                    <RelativePanel x:Name="NODO_Property" Visibility="Collapsed" >
                                        <TextBlock HorizontalAlignment="Left" Margin="16,55,0,0" Text="ID" VerticalAlignment="Top"/>
                                        <TextBox x:Name="NODO_ID" IsEnabled="False" HorizontalAlignment="Left" Margin="125,55,0,0" Text="..." VerticalAlignment="Top"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="16,90,0,0" Text="ENABLED" VerticalAlignment="Top"/>
                                        <CheckBox x:Name="NODO_ENABLED" HorizontalAlignment="Left" Margin="125,90,0,0" Content=""  VerticalAlignment="Top"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="16,125,0,0" Text="TRUST" VerticalAlignment="Top"/>
                                        <CheckBox x:Name="NODO_TRUST" HorizontalAlignment="Left" Margin="125,125,0,0" Content=""  VerticalAlignment="Top"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="16,160,0,0" Text="NOME" VerticalAlignment="Top"/>
                                        <TextBox x:Name="NODO_NOME" HorizontalAlignment="Left" Margin="125,160,0,0" Text="..." VerticalAlignment="Top" Width="210"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="16,195,0,0" Text="DESCR" VerticalAlignment="Top"/>
                                        <TextBox x:Name="NODO_DESCR" HorizontalAlignment="Left" Margin="125,195,0,-69" Text="..." VerticalAlignment="Top" Width="210" Height="101"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="16,300,0,0" Text="NUM" VerticalAlignment="Top"/>
                                        <TextBox x:Name="NODO_NUM" HorizontalAlignment="Left" Margin="125,300,0,0" Text="..." VerticalAlignment="Top" Width="210"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="16,335,0,0" Text="IP" VerticalAlignment="Top"/>
                                        <TextBox x:Name="NODO_IP" HorizontalAlignment="Left" Margin="125,335,0,0" Text="..." VerticalAlignment="Top" Width="210"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="16,370,0,0" Text="HW ADDRESS" VerticalAlignment="Top"/>
                                        <TextBox x:Name="NODO_RETE" HorizontalAlignment="Left" Margin="125,370,0,0" Text="..." VerticalAlignment="Top" Width="210"/>
                                    </RelativePanel>
                                    <RelativePanel x:Name="CENTRAL_Property" Visibility="Collapsed">
                                        <TextBlock HorizontalAlignment="Left" Margin="16,55,0,0" Text="ID" VerticalAlignment="Top"/>
                                        <TextBox x:Name="CENTRAL_ID" IsEnabled="False" HorizontalAlignment="Left" Margin="125,55,0,0" Text="..." VerticalAlignment="Top"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="16,90,0,0" Text="ENABLED" VerticalAlignment="Top"/>
                                        <CheckBox x:Name="CENTRAL_ENABLED" HorizontalAlignment="Left" Margin="125,90,0,0" Content=""  VerticalAlignment="Top"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="16,125,0,0" Text="TRUST" VerticalAlignment="Top"/>
                                        <CheckBox x:Name="CENTRAL_TRUST" HorizontalAlignment="Left" Margin="125,125,0,0" Content=""  VerticalAlignment="Top"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="16,160,0,0" Text="NOME" VerticalAlignment="Top"/>
                                        <TextBox x:Name="CENTRAL_NOME" HorizontalAlignment="Left" Margin="125,160,0,0" Text="..." VerticalAlignment="Top" Width="210"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="16,195,0,0" Text="DESCR" VerticalAlignment="Top"/>
                                        <TextBox x:Name="CENTRAL_DESCR" HorizontalAlignment="Left" Margin="125,195,0,-69" Text="..." VerticalAlignment="Top" Width="210" Height="101"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="16,300,0,0" Text="NUM" VerticalAlignment="Top"/>
                                        <TextBox x:Name="CENTRAL_NUM" HorizontalAlignment="Left" Margin="125,300,0,0" Text="..." VerticalAlignment="Top" Width="210"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="16,335,0,0" Text="IP" VerticalAlignment="Top"/>
                                        <TextBox x:Name="CENTRAL_IP" HorizontalAlignment="Left" Margin="125,335,0,0" Text="..." VerticalAlignment="Top" Width="210"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="16,370,0,0" Text="HW ADDRESS" VerticalAlignment="Top"/>
                                        <TextBox x:Name="CENTRAL_RETE" HorizontalAlignment="Left" Margin="125,370,0,0" Text="..." VerticalAlignment="Top" Width="210"/>
                                    </RelativePanel>
                                    <RelativePanel x:Name="OGGETTO_Property" Visibility="Visible">
                                        <TextBlock HorizontalAlignment="Left" Margin="16,55,0,0" Text="ID" VerticalAlignment="Top"/>
                                        <TextBox x:Name="ID" IsEnabled="False" HorizontalAlignment="Left" Margin="125,55,0,0" Text="..." VerticalAlignment="Top"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="16,90,0,0" Text="ENABLED" VerticalAlignment="Top"/>
                                        <CheckBox x:Name="ENABLED" HorizontalAlignment="Left" Margin="125,90,0,0" Content=""  VerticalAlignment="Top"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="16,125,0,0" Text="Nome" VerticalAlignment="Top"/>
                                        <TextBox x:Name="NOME" HorizontalAlignment="Left" Margin="125,125,0,0" Text="..." VerticalAlignment="Top" Width="210"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="16,160,0,0" Text="ATTIVO" VerticalAlignment="Top"/>
                                        <ToggleSwitch x:Name="ATTIVO" HorizontalAlignment="Left" Margin="125,160,0,0"   VerticalAlignment="Top"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="16,195,0,0" Text="Nodo" VerticalAlignment="Top"/>
                                        <ComboBox x:Name="NODO" HorizontalAlignment="Left" Margin="125,195,0,0" VerticalAlignment="Top" SelectionChanged="NODO_SelectionChanged"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="16,264,0,-34" Text="PIN" VerticalAlignment="Top"/>
                                        <ComboBox x:Name="PIN" HorizontalAlignment="Left" Margin="125,264,0,-34" VerticalAlignment="Top"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="16,299,0,-34" Text="Value" VerticalAlignment="Top"/>
                                        <TextBox x:Name="VALUE" HorizontalAlignment="Left" Margin="125,299,0,-34" Text="..." VerticalAlignment="Top" Width="210"/>
                                        <TextBlock HorizontalAlignment="Left" Margin="16,230,0,0" Text="IP" VerticalAlignment="Top"/>
                                        <TextBox x:Name="IP" IsReadOnly="True" HorizontalAlignment="Left" Margin="125,230,0,0" Text="..." VerticalAlignment="Top" Width="210"/>
                                    </RelativePanel>
                                    <Button x:Name="btnPropertyElimina" Content="ELIMINA" HorizontalAlignment="Left" Margin="15,407,0,-16" VerticalAlignment="Top" Click="btnPropertyElimina_Click"/>
                                    <Button x:Name="btnPropertyAnnulla" Content="ANNULLA" HorizontalAlignment="Left" Margin="140,407,0,-16" VerticalAlignment="Top" Click="btnPropertyAnnulla_Click"/>
                                    <Button x:Name="btnPropertySalva" Content="SALVA" HorizontalAlignment="Left" Margin="275,407,0,-16" VerticalAlignment="Top" Click="btnPropertySalva_Click"/>
                                </RelativePanel>
                            </Grid>
                        </RelativePanel>
                        <RelativePanel x:Name="ToolBarSchema" Visibility="Visible" >
                            <Grid x:Name="schemaGPIO">
                                <local:GPIO x:Name="gpio" Width="500" Height="500" />
                            </Grid>
                        </RelativePanel>

                        <!--REGOLE-->
                        <RelativePanel x:Name="ToolbarRegole" Visibility="Collapsed" >
                            <Grid >

                            </Grid>
                        </RelativePanel>
                        <!--INFO-->
                        <RelativePanel x:Name="ToolbarInfo" Visibility="Collapsed" >
                            <Grid >
                                <!--LEGENDA-->
                                <!--light-->
                                <TextBlock HorizontalAlignment="Left" Margin="27,6,0,0" Text="Luce Spenta" TextWrapping="Wrap" VerticalAlignment="Top"/>
                                <TextBlock HorizontalAlignment="Left" Margin="27,27,0,0" Text="Luce Accesa" TextWrapping="Wrap" VerticalAlignment="Top"/>
                                <Image x:Name="light_off" Source="/Assets/light_off.png"  Width="16" Height="16" HorizontalAlignment="Left"  Margin="0,11,0,0" VerticalAlignment="Top" />
                                <Image x:Name="light_on" Source="/Assets/light_on.png"  Width="16" Height="16" HorizontalAlignment="Left"  Margin="0,31,0,0" VerticalAlignment="Top" />
                                <!--pir-->
                                <TextBlock HorizontalAlignment="Left" Margin="27,50,0,0" Text="PIR Spento" TextWrapping="Wrap" VerticalAlignment="Top"/>
                                <TextBlock HorizontalAlignment="Left" Margin="27,71,0,0" Text="PIR Acceso" TextWrapping="Wrap" VerticalAlignment="Top"/>
                                <TextBlock HorizontalAlignment="Left" Margin="27,89,0,0" Text="PIR Segnalazione" TextWrapping="Wrap" VerticalAlignment="Top"/>
                                <Image x:Name="bell_off" Source="/Assets/bell_off.png"  Width="16" Height="16" HorizontalAlignment="Left"  Margin="0,53,0,0" VerticalAlignment="Top" />
                                <Image x:Name="bell_on" Source="/Assets/bell_on.png"  Width="16" Height="16" HorizontalAlignment="Left"  Margin="0,74,0,0" VerticalAlignment="Top" />
                                <Image x:Name="bell_active" Source="/Assets/bell_active.png"  Width="16" Height="16" HorizontalAlignment="Left"  Margin="0,92,0,0" VerticalAlignment="Top" />
                            </Grid>
                        </RelativePanel>
                    </RelativePanel>
                </Grid>
            </PivotItem>
            <PivotItem x:Name="TabsSettings" Header="Setting" >
                <Grid>
                    <TextBlock HorizontalAlignment="Left" Margin="334,3,0,0" Text="RASPA Information" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
                    <TextBlock HorizontalAlignment="Left" Margin="61,118,0,0" Text="HOSTNAME" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBox x:Name="HostName" IsReadOnly="True" HorizontalAlignment="Left" Margin="184,113,0,0" Text="" VerticalAlignment="Top" Width="505"/>
                    <TextBlock HorizontalAlignment="Left" Margin="61,162,0,0" Text="IP ver 4" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBox x:Name="IPv4" IsReadOnly="True" HorizontalAlignment="Left" Margin="184,157,0,0" Text="" VerticalAlignment="Top" Width="505"/>
                    <TextBlock HorizontalAlignment="Left" Margin="61,210,0,0" Text="IP ver 6" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBox x:Name="IPv6" IsReadOnly="True" HorizontalAlignment="Left" Margin="184,205,0,0" Text="" VerticalAlignment="Top" Width="505"/>
                    <TextBlock HorizontalAlignment="Left" Margin="61,257,0,0" Text="Physical Address" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBox x:Name="HWAddress" IsReadOnly="True" HorizontalAlignment="Left" Margin="184,252,0,0" Text="" VerticalAlignment="Top" Width="505"/>
                    <TextBlock x:Name="lblNode" HorizontalAlignment="Left" Margin="61,82,0,0" Text="Node" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="61,53,0,0" Text="Stato" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <ToggleSwitch x:Name="Stato" HorizontalAlignment="Left" Margin="186,44,0,0" VerticalAlignment="Top" Width="98"/>
                    <Button x:Name="btnSave" Content="SAVE" HorizontalAlignment="Left" Margin="632,411,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.407,-0.594"/>
                    <TextBox x:Name="NodeUser" IsReadOnly="True" HorizontalAlignment="Left" Margin="184,307,0,0" Text="" VerticalAlignment="Top" Width="505"/>
                    <TextBlock HorizontalAlignment="Left" Margin="61,313,0,0" Text="User" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBox x:Name="NodePassword" IsReadOnly="True" HorizontalAlignment="Left" Margin="184,351,0,0" Text="" VerticalAlignment="Top" Width="505"/>
                    <TextBlock HorizontalAlignment="Left" Margin="61,357,0,0" Text="Password" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <TextBlock x:Name="NodeNum" HorizontalAlignment="Left" Margin="188,83,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="48"/>
                    <TextBlock x:Name="NodeName" HorizontalAlignment="Left" Margin="253,83,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="431"/>
                </Grid>
            </PivotItem>
        </Pivot>
        <ToggleButton  x:Name="working" IsChecked="true"
            HorizontalAlignment="Left" Margin="449,13,0,0" VerticalAlignment="Top"  Tapped="mode_Tapped" Content="working" ></ToggleButton>
        <ToggleButton  x:Name="editing" IsChecked="false"
            HorizontalAlignment="Left" Margin="527,13,0,0" VerticalAlignment="Top"  Tapped="mode_Tapped" Content="Editing" ></ToggleButton>
        <Image x:Name="btnRefresh" Source="Assets/refresh.png" Width="32" Height="32" Margin="662,15,586,753" Tapped="btnRefresh_Tapped" />
    </Grid>
</Page>

